#!/bin/bash
# vim: set ft=sh

set -eu

export GOPATH=$PWD/gopath
export PATH=$GOPATH/bin:$PATH

BUILD_DIR=$PWD/built-resource

# run tests
(
    set -e

    cd $GOPATH/src/github.com/concourse/cf-resource

    export GOPATH=${PWD}/Godeps/_workspace:$GOPATH
    export PATH=${PWD}/Godeps/_workspace/bin:$PATH

    go install github.com/onsi/ginkgo/ginkgo

    CGO_ENABLED=1 ginkgo -race -r -p "$@"
)

# build & download binaries
(
    set -e

    cd $GOPATH/src/github.com/contraband/autopilot

    export GOPATH=${PWD}/Godeps/_workspace:$GOPATH
    export PATH=${PWD}/Godeps/_workspace/bin:$PATH

    go build -o $BUILD_DIR/autopilot github.com/contraband/autopilot
)

(
    set -e

    cd $GOPATH/src/github.com/concourse/cf-resource

    export GOPATH=${PWD}/Godeps/_workspace:$GOPATH
    export PATH=${PWD}/Godeps/_workspace/bin:$PATH

    go build -o $BUILD_DIR/built-out ./out/cmd/out
    go build -o $BUILD_DIR/built-check ./check/cmd/check
    go build -o $BUILD_DIR/built-in ./in/cmd/in
)

(
    set -e

    tar -xvf cf-cli/cf-cli_*_linux_x86-64.tgz
    mv cf $BUILD_DIR
)

(
    set -e

    mv antifreeze/antifreeze-linux $BUILD_DIR/antifreeze
)

(
    set -e

    cd $GOPATH/src/github.com/concourse/cf-resource

    cp Dockerfile $BUILD_DIR
)
